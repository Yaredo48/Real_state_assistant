# App Settings
APP_NAME=DealLens AI
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=True

# Database
DATABASE_URL=postgresql://postgres:ANORINIPER@localhost:5432/dealens_db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload
MAX_UPLOAD_SIZE=26214400  # 25MB in bytes
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=.pdf,.jpg,.jpeg,.png

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]



# AI Services
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=dealens-ai
PINECONE_DIMENSION=1536  # text-embedding-3-small dimension
PINECONE_METRIC=cosine

# Chunking Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_BATCH_SIZE=100